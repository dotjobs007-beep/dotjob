{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "experimentalDecorators": true,   // ✅ enable decorators
    "emitDecoratorMetadata": true     // ✅ needed for class-validator
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
